<wirewrap xmlns="http://xsd.metawrap.com/wirewrap/1.0/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xsd.metawrap.com/wirewrap/1.0/ http://xsd.metawrap.com/wirewrap/1.0/wirewrap.xsd" >
    <selector css=".wrap">        
        <style>
            width: 67%;
            margin: 0 0 1em 14%;
            padding: 2% 3% 2% 5%;
            BACKGROUND: white;
            border-style: solid;
            border-width: 1px;
            top: -1px;                
        </style>              
    </selector>

    <selector css="h1,h2,h3,h4">        
        <style>
            position: relative;
            left: -1em;
            clear: both;
        </style>              
    </selector>

    <selector css="body">        
        <style>
        margin: 0;
        padding: 0;
        background: #FC0;
        font: 0.8em trebuchet ms;
        </style>              
    </selector>

    <selector css="em">        
        <style>
            background: #ffc;
        </style>              
    </selector>

    <selector css="pre">        
        <style>        
            font-size: 1.1em;
            background: #f0f0f0;
            -moz-border-radius: 10px;
            padding: 1em;
        </style>              
    </selector>


    <selector css="pre span">        
        <style>       
            font-weight: bold;
        </style>              
    </selector>

    <selector css=".selector, pre b">        
        <style>       
            color: red;
        </style>              
    </selector>


    <selector css=".beh">        
        <style>
            color: blue;
        </style>              
    </selector>

    <selector css=".event">        
        <style>
            color: green;
        </style>              
    </selector>

    <selector css="#sortable-list li">        
        <style>
            cursor:move;
            -moz-user-select: none;
            width: 100%;
        </style>              
    </selector>

    <selector css=".dropout li">        
        <style>
            width: 100px;
            line-height: 100px;
            text-align: center;
            float: left;
            margin: 5px;
            border: 1px solid #ccc;
            list-style: none;
        </style>              
    </selector>


    <selector css=".dropout li.hover">        
        <style>
            background: yellow;
        </style>              
    </selector>
        
</wirewrap>            
        
